package build

import mill._
import mill.javalib._
import mill.javalib.publish._
import $packages._

trait BaseMavenModule extends MavenModule with PublishModule {

  override def pomSettings = PomSettings(
    "Just a pom that makes it easy to build both projects at the same time.",
    "com.example.maven-samples",
    "",
    Seq(),
    VersionControl(),
    Seq()
  )
  override def publishVersion = "1.0-SNAPSHOT"

}

object `package` extends RootModule with BaseMavenModule {
  override def artifactName = "parent"
  override def pomPackagingType = "pom"

}
